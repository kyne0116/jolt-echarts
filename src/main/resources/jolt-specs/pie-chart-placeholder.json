[
  {
    "operation": "shift",
    "spec": {
      "chartMeta": {
        "title": "title.text"
      },
      "series": {
        "*": {
          "seriesName": "series[0].data[&1].name",
          "values": "series[0].data[&1].value"
        }
      }
    }
  },
  {
    "operation": "default",
    "spec": {
      "tooltip": {
        "trigger": "item",
        "formatter": "{a} <br/>{b}: {c} ({d}%)"
      },
      "legend": {
        "orient": "vertical",
        "left": "left",
        "show": true
      },
      "toolbox": {
        "feature": {
          "saveAsImage": {}
        }
      },
      "series": [
        {
          "name": "${chart_title}",
          "type": "pie",
          "radius": "50%",
          "center": ["50%", "60%"],
          "emphasis": {
            "itemStyle": {
              "shadowBlur": 10,
              "shadowOffsetX": 0,
              "shadowColor": "rgba(0, 0, 0, 0.5)"
            }
          }
        }
      ]
    }
  }
]
