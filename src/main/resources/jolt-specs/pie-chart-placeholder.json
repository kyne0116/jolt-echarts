[
  {
    "operation": "shift",
    "spec": {
      "chartMeta": {
        "title": "title.text"
      },
      "series": {
        "*": {
          "seriesName": "series[0].data[&1].name",
          "values": "series[0].data[&1].value"
        }
      }
    }
  },
  {
    "operation": "shift",
    "spec": {
      "*": "&",
      "series": {
        "*": {
          "seriesName": "legend.data[&1]"
        }
      }
    }
  },
  {
    "operation": "default",
    "spec": {
      "tooltip": {
        "trigger": "item",
        "formatter": "{a} <br/>{b}: {c} ({d}%)"
      },
      "legend": {
        "orient": "vertical",
        "left": "left",
        "show": true
      },
      "color": [
        "#5470c6", "#91cc75", "#fac858", "#ee6666", "#73c0de",
        "#3ba272", "#fc8452", "#9a60b4", "#ea7ccc", "#5470c6"
      ],
      "toolbox": {
        "feature": {
          "saveAsImage": {}
        }
      },
      "series": [
        {
          "name": "${chart_title}",
          "type": "pie",
          "radius": "50%",
          "center": ["50%", "60%"],
          "itemStyle": {
            "borderRadius": 8,
            "borderColor": "#fff",
            "borderWidth": 2
          },
          "emphasis": {
            "itemStyle": {
              "shadowBlur": 10,
              "shadowOffsetX": 0,
              "shadowColor": "rgba(0, 0, 0, 0.5)"
            }
          }
        }
      ]
    }
  }
]
