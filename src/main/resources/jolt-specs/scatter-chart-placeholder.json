[
  {
    "operation": "shift",
    "spec": {
      "chartMeta": {
        "title": "title.text",
        "subtitle": "title.subtext"
      },
      "axisConfig": {
        "xAxis": {
          "name": "xAxis.name",
          "nameLocation": "xAxis.nameLocation",
          "type": "xAxis.type",
          "min": "xAxis.min",
          "max": "xAxis.max",
          "scale": "xAxis.scale",
          "splitLine": {
            "show": "xAxis.splitLine.show"
          }
        },
        "yAxis": {
          "name": "yAxis.name",
          "nameLocation": "yAxis.nameLocation", 
          "type": "yAxis.type",
          "min": "yAxis.min",
          "max": "yAxis.max",
          "scale": "yAxis.scale",
          "splitLine": {
            "show": "yAxis.splitLine.show"
          }
        }
      },
      "dataStructure": {
        "series": {
          "*": {
            "data": "series[&1].data",
            "seriesName": "series[&1].name",
            "seriesType": "series[&1].type",
            "symbolSize": "series[&1].symbolSize",
            "symbol": "series[&1].symbol",
            "itemStyle": {
              "color": "series[&1].itemStyle.color",
              "borderColor": "series[&1].itemStyle.borderColor", 
              "borderWidth": "series[&1].itemStyle.borderWidth",
              "opacity": "series[&1].itemStyle.opacity"
            },
            "emphasis": {
              "focus": "series[&1].emphasis.focus",
              "itemStyle": {
                "borderColor": "series[&1].emphasis.itemStyle.borderColor",
                "borderWidth": "series[&1].emphasis.itemStyle.borderWidth"
              }
            }
          }
        }
      },
      "styleConfig": {
        "theme": "backgroundColor",
        "colorPalette": "color",
        "gridConfig": {
          "left": "grid.left",
          "right": "grid.right",
          "top": "grid.top", 
          "bottom": "grid.bottom"
        }
      }
    }
  },
  {
    "operation": "shift", 
    "spec": {
      "*": "&",
      "series": {
        "*": {
          "name": "legend.data[&1]",
          "*": "series[&1].&"
        }
      }
    }
  },
  {
    "operation": "default",
    "spec": {
      "xAxis": {
        "type": "value",
        "scale": true,
        "splitLine": {
          "show": true
        }
      },
      "yAxis": {
        "type": "value",
        "scale": true,
        "splitLine": {
          "show": true
        }
      },
      "series": {
        "*": {
          "type": "scatter",
          "symbolSize": 8,
          "itemStyle": {
            "borderWidth": 1,
            "opacity": 0.8
          },
          "emphasis": {
            "focus": "series"
          }
        }
      },
      "tooltip": {
        "trigger": "item",
        "formatter": "{a}<br/>{b}: ({c})"
      },
      "legend": {
        "type": "scroll",
        "orient": "horizontal", 
        "left": "center",
        "top": "bottom"
      },
      "grid": {
        "left": "3%",
        "right": "4%",
        "bottom": "15%",
        "containLabel": true
      }
    }
  }
]